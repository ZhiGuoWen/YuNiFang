<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/frame"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/adapter_imageview"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#f00" />

    <TextView
        android:id="@+id/adapter_title"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/adapter_imageview" />

    <TextView
        android:id="@+id/adapter_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/adapter_title"
        android:layout_gravity="bottom"
        android:textColor="#f00"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/adapter_dropprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/adapter_title"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/adapter_price" />
</RelativeLayout>