<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wenzhiguo.yunifang.activity.MainActivity">
    <LinearLayout
        android:id="@+id/zong_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/home_line"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:src="@drawable/bottom_tab_home_selected"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/home_image" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="首页"
                android:textColor="#ff00"
                android:id="@+id/home_text" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/video_line"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:src="@drawable/bottom_tab_classify_normal"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/video_image" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="分类"
                android:id="@+id/video_text" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/care_line"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:src="@drawable/bottom_tab_shopping_normal"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/care_image" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="购物车"
                android:id="@+id/care_text" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/login_line"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:src="@drawable/bottom_tab_user_normal"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/login_image" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="个人"
                android:id="@+id/login_text" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/framelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/zong_line"></FrameLayout>
</RelativeLayout>
