<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/frame"
    android:layout_height="match_parent">
    <ImageView
        android:background="#f00"
        android:id="@+id/adapter_imageview"
        android:layout_width="100dp"
        android:layout_height="100dp"
        />
    <TextView
        android:layout_below="@+id/adapter_imageview"
        android:id="@+id/adapter_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:textColor="#f00"
        android:textSize="20sp"
        android:layout_below="@+id/adapter_title"
        android:layout_gravity="bottom"
        android:id="@+id/adapter_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       />
    <TextView
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/adapter_title"
        android:id="@+id/adapter_dropprice"
        android:layout_toRightOf="@id/adapter_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>